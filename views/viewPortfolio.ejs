<!DOCTYPE html>
<html>
  <head>
    <title>View Portfolio</title>
  </head>
  <body>
    <div class="portfolio-container">
      <h1><%- portfolio.title %></h1>
      <p><%- portfolio.description %></p>
      <p>Owner: <%= portfolio.owner %></p>
      <div class="image-gallery">
        <% portfolio.images.forEach(image => { %>
        <img src="<%= image %>" alt="Portfolio Image" style="width: 200px" />
        <% }); %>
      </div>
      <a href="/portfolio/all">Back to All Portfolios</a>
    </div>
  </body>
</html>
